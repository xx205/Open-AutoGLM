+  f.locale = [NSLocale localeWithLocaleIdentifier:@"zh_CN"];
+  f.dateFormat = @"yyyy年MM月dd日";
+  NSString *day = [f stringFromDate:date] ?: @"";
+
+  NSArray<NSString *> *weekdays = @[@"星期日", @"星期一", @"星期二", @"星期三", @"星期四", @"星期五", @"星期六"];
